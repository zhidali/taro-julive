/* 弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 1000;
}

.common-button-whole {
  margin-top: 32rpx;
  font-family: PingFangSC-Medium;
  width: 100%;
  height: 88rpx;
  background-color: #00c0eb;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
  box-sizing: border-box;
}

.common-tips {
  margin-top: 32rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(141, 151, 153, 1);
  line-height: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
