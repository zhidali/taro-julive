.essay-cell-content-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
  min-width: 100%;
  /* min-height: 300rpx; */
  /* max-height: 300rpx; */
  align-items: flex-start;
  position: relative;
}

.hover-class {
  background-color: #eee;
}

.essay-top-view {
  width: 100%;
  /* height: 180rpx; */
  /* min-height: 180rpx; */
  /* max-height: 180rpx; */
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-top: 2rpx;
}

.essay-image {
  border-radius: 4px;
  width: 200rpx;
  min-width:200rpx;
  max-width: 200rpx;
  height: 150rpx;
  min-height: 150rpx;
  max-height: 150rpx;
  margin-right: 40rpx;
  margin-top: 32rpx;
  background-color: #efefef;
}

.essay-left-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.essay-title {
  text-align: left;
  margin-left: 40rpx;
  margin-top: 28rpx;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  /* -webkit-line-clamp: 2;   */
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #3E4A59;
  letter-spacing: 0;
  line-height: 22px;
}

.essay-desc {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #818e9d;
  text-align: left;
  margin-left: 40rpx;
  margin-right: 20rpx;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1;   
}

.essay-share-view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 112rpx;
  justify-content: space-between;
  align-items: center;
}

.essay-public-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
  margin-left: 40rpx;
  padding-top:14rpx;
}

.essay-public-avatar {
  width: 48rpx;
  height: 48rpx; 
  border-radius: 24rpx;
  background-color: #efefef;
  border: 1rpx #F3F6F9 solid;
}

.essay-public-name, .essay-public-time  {
  font-size: 24rpx;
  color: #A3AEBB;
  margin-left: 16rpx;
  flex-wrap: nowrap; 
}

.essay-public-name {
  max-width: 80px;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1;   
}

.essay-share-action-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
  margin-right: 40rpx;
  position: relative;
  flex-wrap: nowrap;
}

.share-fake-button {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0);
}

.icon-share {
  width: 45rpx;
  height: 45rpx;
}

.icon-share-text {
  margin-left: 8rpx;
  font-size: 25rpx;
  color: #A3AEBB;
}

.essay-line-view {
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  height: 1px;
  bottom: 0px;
  background-color: #F3F6F9;
}