.download-file-cell {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  overflow: hidden;
  margin-top: 10px;
  margin-left: 15px;
  margin-right: 15px;
  flex: 1;
  min-height: 50px;
  background: white;
  border: 1rpx solid #EEF3F5;
  border-radius: 4px;
}

.icon-download-image {
  width: 50px;
  height: 50px;
}

.download-text-view {
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex: 1;
}

.download-title {
  margin-top: 7px;
  font-size: 14px;
  color: #333333;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;           
  -webkit-box-orient: vertical;   
  -webkit-line-clamp: 1;
}

.download-content {
  margin-top: 4px;
  font-size: 12px;
  color: #999999;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;           
  -webkit-box-orient: vertical;   
  -webkit-line-clamp: 1;
}

.download-tap-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 50px;
  height: 50px;
  border-left: 1rpx solid #EEF3F5;
}

.icon-download-tap-image {
   width: 20px;
   height: 20px;
   margin-left: 15px;
}