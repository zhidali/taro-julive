.dynamic-item-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  background-color: white;
  width: 100%;
  position: relative;
}

.slide-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.circle-view {
  margin-left: 40rpx;
  width:14rpx;
  height:14rpx;
  border-radius: 7rpx;
  background-color: #47B3E3;
}

.vertical-slide-view {
  margin-left: 46rpx;
  width: 2rpx;
  height: 100%;
  background-color: #F3F6F9;
}

.dynamic-item-content {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 20rpx;
  margin-right: 40rpx;
  margin-top: -13rpx;
  flex: 1;
  overflow: hidden;
  flex:1;
}

.dynamic-top-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.dynamic-time {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #77808A;
}

.dynamic-icon {
  margin-left: 27rpx;
  width: 62rpx;
  height: 32rpx;
  margin-top: 2px;
}

.dynamic-from {
  margin-right: 0;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #9FA6AF;
  text-align: right;
  flex: 1;
}

.dynamic-content-view {
  margin-top: 32rpx;
  border-radius: 16rpx;
  background-color: #F3F6F9;
  overflow: hidden;
}

.dynamic-title {
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #3E4A59;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1;
}

.dynamic-content {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #3E4A59;
  line-height: 48rpx;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;
}

.dynamic-fake-form-button {
  position: absolute;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
}