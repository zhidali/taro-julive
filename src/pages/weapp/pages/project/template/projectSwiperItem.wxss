.project-swiper-item-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  position: relative;
}

.project-swiper-sale-activity {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 125rpx;
  height: 50rpx;
}

.project-swiper-image {
  width:320rpx;
  height: 240rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.project-swiper-name {
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #3E4A59;
  min-width: 100%;
  max-width: 100%;
  margin-top: 8rpx;
  white-space: normal;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;              
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1;
  overflow: hidden; 
}

.project-swiper-desc {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #77808A;
  min-width: 100%;
  max-width: 100%;
  margin-top: 8rpx;
  white-space: normal;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;              
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1;
  overflow: hidden; 
}

.project-swiper-price {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 8rpx;
}

.project-swiper-price-label, .project-swiper-info-unit {
  margin-top: 2rpx;
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
  color: #FA5F35;
  line-height: 28rpx;
}

.project-swiper-tags {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  overflow: hidden;
  margin-top: 16rpx;
}

.project-swiper-tag-item {
  background: #F3F6F9;
  border-radius: 4px;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
  white-space: nowrap;
}

.project-swiper-tag-text {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #77808A;
  line-height: 24px;
  margin-left: 18rpx;
  margin-right: 18rpx;
  border-radius: 4px;
}

.project-swiper-single-item-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  position: relative;
}

.project-item-top-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}

.project-swiper-single-image {
  width: 296rpx;
  height: 222rpx;
  border-radius: 8rpx;
}

.project-item-info-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  flex:1;
  margin-left: 20rpx;
}

.project-item-name-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.project-item-name {
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #3E4A59;
  flex:1;
  white-space: normal;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;              
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1;
}

.project-item-status {
  background: #0AD487;
  border-radius: 4rpx;
  color: white;
  font-family: PingFang-SC-Medium;
  font-size: 24rpx;
  line-height: 24rpx;
  padding: 4rpx 10rpx;
  margin-right: 0rpx;
}

.project-item-sale-out {
  color: white;
  background: #aaa;
}

.project-special-tags {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 16rpx;
}

.project-special-tag-item {
  margin-right: 10rpx;
  white-space: nowrap;
  flex-wrap: nowrap;
}

.project-special-tag-text {
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
  color: #77808A;
}

.project-special-desc {
  background:#FFF1ED;
  border-radius:6rpx;
  width: 100%;
  height: 44rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
}

.project-special-desc-text-tip {
  font-family: PingFangSC-Semibold;
  font-size: 24rpx;
  color: #FA5F35;
  line-height: 28rpx;
  margin-left: 20rpx;
  flex-wrap: nowrap;
  white-space: nowrap;
}

.project-special-desc-text {
  font-family: PingFang-SC-Medium;
  font-size: 24rpx;
  color: #FA5F35;
  margin-left: 20rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;              
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1;
  overflow: hidden; 
}

.project-hover-item-view {
  background-color: #efefef;
}

.project-fake-form-button {
 position: absolute;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
}