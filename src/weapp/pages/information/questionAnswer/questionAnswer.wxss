@import '../../template/qaCell/qaCell.wxss';
@import '../../../component/loading/loading.wxss';
@import '../../home/hotTabModule/homeHotlineModule.wxss';
@import '../../template/barTypeLogin//barTypeLogin.wxss';

.container {
  background-color: #f2f2f2;
  min-width: 100%;
  max-width: 100%;
  min-height: 100vh;
  padding-top: 92rpx;
}

.question-ask-header-view {
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  background-color: white;
}

.question-ask-header-image {
  width: 100vw;
  height: 36vw;
  background-size: cover;
}

.question-ask-header-action {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}

.question-ask-search-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.question-ask-search {
  background-color: #48b3e2;
  width: 80vw;
  height: 64rpx;
  border-radius: 32rpx;
  margin-top: 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.question-search-icon {
  width: 30px;
  height: 30px;
  margin-left: 15rpx;
}

.question-search-input,
.question-search-input-placeholder {
  font-size: 13px;
  color: white;
  max-width: 84%;
  min-width: 84%;
}

.question-ask-cancel-button {
  font-size: 15px;
  color: #666;
  background-color: white;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.question-ask-cancel-button::after {
  border: none;
  border-radius: 0;
}

.question-filter-view {
  background-color: white;
  min-width: 100%;
  max-width: 100%;
  height: 80rpx;
  border-top: 1rpx solid #f1f1f1;
  border-bottom: 1rpx solid #f1f1f1;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
}

.fiexd-filter-view {
  position: fixed;
  top: 92rpx;
  z-index: 99;
}

.question-filter-scroll-view {
  overflow-y: hidden;
  height: 99%;
  line-height: 99%;
  margin-left: 0rpx;
  background-color: white;
  white-space: nowrap;
  flex: 1;
}

.filter-menu_item {
  font-size: 28rpx;
  color: #3e4a59;
  background-color: white;
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 0rpx;
  padding-right: 0rpx;
  margin-top: 12rpx;
  margin-right: 80rpx;
  border-radius: 6rpx;
  text-align: left;
}

.filter-menu-active {
  color: #48b3e2;
}

.menu-item-first {
  margin-left: 42rpx;
}

.menu-item-last {
  margin-right: 42rpx;
}

.qa-cell-view {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.loading-tip {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #ccc;
  font-size: 25rpx;
}

.loading-view {
  position: absolute;
  padding-top: 30vh;
  align-items: center;
  width: 100vw;
  z-index: 1000;
  height: 100%;
}
