
.employee-review-cell {
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 32rpx;
  margin-bottom: 52rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #F3F6F9;
  border-radius: 8rpx;
}

.employee-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  min-height: 140rpx;
  align-items: center;
  align-content: center;
}

.project-employee-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
  border-radius: 40rpx;
}

.employee-info-view {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex: 1;
}

.employee-name {
  font-size: 28rpx;
  color: #3E4A59;
}

.employee-review-base-label {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: white;
  width: 122rpx;
  line-height: 28rpx;
  text-align: center;
  border-radius: 14rpx;
}

.employee-review-best-label {
  background-image: linear-gradient(42deg, #E1B466,#F2DBA0);
}

.employee-review-district-label {
 background-image: linear-gradient(48deg, #47B3E3,#5DD7FF);
}

.employee-consult-button {
  margin-right: 20rpx;
  border:1px solid #00C0EB; 
  width: 160rpx;
  height: 60rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #00C0EB;
  position: relative;
}

.employee-review-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 20rpx;
  margin-right: 20rpx;
  flex: 1;
}

.employee-review-content {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #3E4A59;
  line-height: 48rpx;
}

.employee-review-content-expand {
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 3;
}

.employee-review-expand-button {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #00C0EB;
  text-align: center;
}

.employee-review-expand-hover-button {
  background-color: #efefef;
}

.employee-review-image-view {
  margin-top: 15rpx;
}

.employee-review-image {
  width: 70px;
  height: 64px;
  margin-right: 15rpx;
  margin-top: 15rpx;
  background-color: #efefef;
}

.employee-review-time-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  flex-wrap: wrap;
}

.employee-review-time {
  color: #999;
  font-size: 12px;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}

.employee-review-like-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.employee-review-like-icon {
  width: 16px;
  height: 16px;
}

.employee-review-like-num {
  font-size: 14px;
  color: #999;
  margin-left: 10rpx;
  margin-right: 0;
}

.employee-fake-form-button {
  position: absolute;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
}