.bar-type-login {
  width: 100vw;
  height: 88rpx;
  background:rgba(62,74,89,0.85);
  z-index: 9;
  opacity: 0;
  position: fixed;
  bottom: 0px;
  display: flex;
  align-items: center;
  padding: 0px 40rpx;
  box-sizing: border-box;
  animation-duration: 1s;
  -webkit-animation-duration: 1s;
  animation-delay: 500ms;
  -webkit-animation-delay: 500ms;
  animation-timing-function: ease-in-out;
  -webkit-animation-timing-function: ease-in-out;
  animation-iteration-count: infinite;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-iteration-count: 1;
  animation-fill-mode: forwards;
  -webkit-animation-fill-mode: forwards;
  z-index:100;
}

._fade-in {
  animation-name: fadeIn;
  -webkit-animation-name: fadeIn;
}
._fade-out {
  opacity: 1;
  animation-name: fadeOut;
  -webkit-animation-name: fadeOut;
}

.bar-type-login-close {
  height: 32rpx;
  width: 32rpx;
}

.bar-type-login-close-mask{
 height: 100%;
 width: 90rpx;
 position: absolute;
 top: 0rpx;
 left: 30rpx;
 opacity: 0;
}

.bar-type-login-img {
  height: 108rpx;
  width: 108rpx;
}

.bar-type-login-text {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 20px;
  flex: 1;
}

.bar-type-login-btn {
  width: 168rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  background: rgba(0, 192, 235, 1);
  border-radius: 4rpx;
  color: rgba(255, 255, 255, 1);
}
.bar-type-login-btn-font{
  font-size: 28rpx;
}
