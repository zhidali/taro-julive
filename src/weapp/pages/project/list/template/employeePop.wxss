.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  z-index: 9999;
  background: #fff;
  border-radius: 10rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.icon-cancel {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 16rpx;
  top: 16rpx;
}

.modal-title {
  font-size: 40rpx;
  line-height: 56rpx;
  color: #3e4a59;
  text-align: center;
  padding-top: 80rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(3, 26, 31, 1);
}

.modal-content {
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 24rpx;
}

.modal-content-text {
  font-family: PingFang-SC-Bold;
  font-size: 28rpx;
  color: #3e4a59;
  text-align: left;
  width: 100%;
  min-width: 100%;
}

.modal-input-phone {
  display: flex;
  background-color: #f3f6f9;
  border-radius: 4rpx;
  font-size: 28rpx;
  margin-top: 44rpx;
  width: 100%;
}

.modal-input-phone .input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #f3f6f9;
}

.btn-confirm {
  font-family: PingFang-SC-Bold;
  color: white;
  border-radius: 4px;
  text-align: center;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 80rpx;
  width: 496rpx;
  background: rgba(0, 192, 235, 1);
}

.discount-pop-employee {
  margin-top: 24rpx;
  width: 496rpx;
  height: 132rpx;
  background: rgba(245, 253, 255, 1);
  border-radius: 8rpx;
  border: 1rpx solid rgba(227, 231, 235, 1);
  display: flex;
  align-items: center;
}
.discount-pop-employee .img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 16rpx 24rpx;
}
.discount-pop-employee .top {
  display: flex;
  align-items: center;
}
.pop-employee-detail .top .name {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(3, 26, 31, 1);
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 162rpx;
}
.pop-employee-detail .top .flag {
  height: 32rpx;
  line-height: 32rpx;
  background: rgba(0, 192, 235, 1);
  border-radius: 0px 8rpx 0px 8rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(255, 255, 255, 1);
  padding: 0 8rpx;
  margin-left: 8rpx;
}
.pop-employee-detail .num {
  margin-top: 4rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(141, 151, 153, 1);
  line-height: 40rpx;
  display: flex;
}

.modal-content-footer {
  padding: 32rpx 0;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(141, 151, 153, 1);
  line-height: 34rpx;
}
.btn-confirm-box {
  position: relative;
}
.list-full-pop-wx-loging {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 2;
}
