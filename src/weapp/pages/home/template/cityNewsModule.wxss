.city-news-box {
  padding: 0rpx 30rpx;
}

.city-news-content {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.08);
  border-radius: 4px;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.city-news-content-top {
  display: flex;
  border-bottom: 1rpx solid rgba(204, 235, 242, 1);
  align-items: center;
  position: relative;
}

.city-news-content-bg {
  width: 100rpx;
  height: 112rpx;
  position: absolute;
  right: 0;
  top: 22rpx;
}

.city-news-content-top-lf {
  flex: 1;
}

.city-news-content-top-lf-title {
  display: flex;
  align-items: flex-end;
  height: 52rpx;
  line-height: 52rpx;
  overflow: hidden;
  margin-top: 24rpx;
  justify-content: center;
}

.city-news-content-top-lf-title view:nth-child(1) {
  font-size: 44rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: rgba(3, 26, 31, 1);
}

.city-news-content-top-lf-title view:nth-child(2) {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(3, 26, 31, 1);
  margin-bottom: 6rpx;
}

.city-news-content-top-lf-explain {
  margin-top: 4rpx;
  margin-bottom: 20rpx;
  height: 32rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(141, 151, 153, 1);
  line-height: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  z-index: 3;
}

.city-news-content-top-lf-img {
  height: 20rpx;
  width: 20rpx;
  margin-right: 4rpx;
  margin-left: 4rpx;
}

.city-news-content-top-mid {
  width: 1rpx;
  height: 60rpx;
  background: rgba(204, 235, 242, 1);
}

.city-news-content-tips-swiper {
  height: 112rpx;
}

.city-news-content-tips-item {
  display: flex;
  align-items: center;
  padding-top: 24rpx;
}

.city-news-content-tips-item:nth-child(2) {
  padding-top: 22rpx;
}

.city-news-content-tips-item-title {
  width: 64rpx;
  min-width: 64rpx;
  height: 32rpx;
  /* margin-left: 4rpx; */
  background-size: cover;
}

.city-news-content-tips-item-content {
  height: 32rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(3, 26, 31, 1);
  margin-left: 4rpx;
}

.city-news-content-btn {
  width: 100%;
  height: 76rpx;
  border-radius: 38rpx;
  margin: 28rpx 0rpx;
  border: 2rpx solid rgba(0, 192, 235, 1);
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.city-news-content-btn-text {
  line-height: 72rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 192, 235, 1);
  text-align: center;
}
