.search-frame {
  /* width: clac(100% - 30px); */
  width: calc(100% - 60rpx);
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background: rgba(255, 255, 255, 1);
  border-radius: 20px;
  opacity: 0.8;
}

.search-frame-sure {
  position: absolute;
  top: 24rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
}

.search-frame-cancel {
  position: relative;
  border: 1px solid #e1e1e1;
  margin-left: 30rpx;
  margin-right: 30rpx;
  box-sizing: border-box;
  margin-top: 32rpx;
}

.search-frame-top {
  top: 112rpx;
}

.search-frame-city-content {
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid #c0c0c0;
  max-width: 146rpx;
  min-width: 146rpx;
}

.search-frame-city-image {
  height: 32rpx;
  width: 32rpx;
}

.search-frame-city {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(3, 26, 31, 1);
  white-space: nowrap;
}

.search-frame-city-image {
  height: 8rpx;
  width: 14rpx;
  margin-left: 8rpx;
}

.search-frame-content-box {
  width: 520rpx;
  position: relative;
}

.search-frame-content {
  height: 72rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-radius: 8rpx;
  flex: 1;
}

.search-frame-content-image {
  height: 32rpx;
  width: 32rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.search-frame-content-input {
  font-size: 32rpx;
  color: #333;
  margin-right: 20rpx;
  flex: 1;
}

.search-frame-content-input-ph {
  font-size: 32rpx;
  color: #a9bacf;
}

.input-ph-B {
  color: #A9BACF;
  font-size: 28rpx;
  max-width: 350rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

}