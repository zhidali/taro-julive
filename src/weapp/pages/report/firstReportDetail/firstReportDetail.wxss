@import "../template/downloadFileCell.wxss";
@import "../../../utils/wxParse/wxParse.wxss";

.pop-mask {
  position: fixed;
  overflow: hidden;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black; 
  opacity: 0.4;
  z-index: 9999;
}

.pop-view{
  position: fixed;
  overflow: hidden;
  top: 15px;
  left: 0;
  bottom: 0;
  width: 100%;
  border-radius: 15px 15px 0 0;
  background: #fff;
  z-index: 10000;
}

.pop-view-content {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
}

.top-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 100%;
  height: 60px;
  background-color: white;
}

.close-icon {
  margin-top: 15px;
  margin-left: 15px;
  width: 35px;
  height: 25px;
}

.block-title-text {
  margin-top: 16px;
  margin-right: 50px;
  width: 100%;
  font-size: 16px;
  font-weight: bold;
  color: #333333;
  text-align: center;
}

.scroll-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-top: 0;
  margin-bottom: 0;
  width: 100%;
  height: 100%;
  padding-bottom: 15px;
  background-color:white;
}

.title-text {
  margin-left: 15px;
  margin-right: 15px;
  display: -webkit-box;
  word-wrap:break-word;
  -webkit-box-orient: vertical;   
  font-size: 16px;
  color: #333333;
}

.content-text {
  margin-top: 10px;
  margin-left: 15px;
  margin-right: 15px;
  font-size: 13px;
  color: #666666;
  text-align: justify;
  line-height: 24px;
}

.wxParse-img {
  width: 80vw;
  margin-top: 10rpx;
  margin-right: 5rpx;
}

.download-file-block-title {
  margin-left: 15px;
  margin-top: 15px;
  font-size: 16px;
  color: #333333;
}