.employee-review-cell {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
}

.employee-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  align-content: center;
}

.employee-avatar {
  width: 50px;
  height: 50px;
  margin-left: 15rpx;
  border-radius: 25px;
}

.employee-review-best-label {
  position: relative;
  top: -10px;
  left: 6rpx;
  font-size: 6px;
  color: white;
  width: 50px;
  height: 10px;
  line-height: 10px;
  text-align: center;
  background-size: cover;
  background-image:url('http://imgs.julive.com/l?p=eyJpbWdfcGF0aCI6IlwvbWluaW1ncy9lbXBsb3llZVJldmlld0NlbGwucG5nIn0=');
}

.employee-consult-button {
  background: #fff;
  border:1px solid #48B3E2; 
  width: 50px;
  height: 18px;
  font-size: 10px;
  border-radius: 2px;
  margin-top: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #48B3E2;
  margin-left: 10rpx;
}

.employee-review-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 15rpx;
  margin-right: 15rpx;
  width: 80vw;
}

.employee-name {
  font-size: 14px;
  color: #333;
  margin-bottom: 15rpx;
}

.employee-review-content {
  font-size: 13px;
  color: #666;
}

.employee-review-content-expand {
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden; 
  text-overflow: ellipsis;            
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 3;  
}

.employee-review-expand-button {
  margin-top: 15rpx;
  font-size: 12px;
}

.employee-review-expand-hover-button {
  background-color: #efefef;
}

.employee-review-image {
  width: 70px;
  height: 64px;
  margin-right: 15rpx;
  margin-top: 15rpx;
  background-color: #efefef;
}

.employee-review-time-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  flex-wrap: wrap;
}

.employee-review-time {
  color: #999;
  font-size: 12px;
  margin-bottom: 15rpx;
  margin-top: 15rpx;
}

.employee-review-like-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right: 15rpx;
}

.employee-review-like-icon {
  width: 16px;
  height: 16px;
}

.employee-review-like-num {
  font-size: 14px;
  color: #999;
  margin-left: 10rpx;
}