
.moald-box{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
  overflow: hidden;
  z-index: 1000;
}

.modal-dialog {
  width: 88vw;
  overflow: hidden;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  right: 6vw;
  z-index: 9999;
  background: #fff;
  border-radius: 10rpx;
  padding: 0px 52rpx;
  box-sizing: border-box;
}

.modal-dialog-img {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 60rpx auto 20rpx auto;
  background-size: cover;
}

.modal-dialog-title {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #a9bacf;
  line-height: 40rpx;
  margin-bottom: 48rpx;
  text-align: center;
}

.modal-dialog-content {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #3e4a59;
  line-height: 40rpx;
  margin-bottom: 24rpx;
}

.modal-dialog-info {
  font-family: PingFang-SC-Medium;
  font-size: 24rpx;
  color: #a9bacf;
  line-height: 34rpx;
  display: flex;
  align-items: center;
  margin-bottom: 58rpx;
}

.modal-dialog-info text {
  display: inline-block;
  background: #a9bacf;
  width: 12rpx;
  height: 12rpx;
  margin-right: 16rpx;
  border-radius: 50%;
}

.modal-dialog-btn {
  background: #47b3e3;
  border-radius: 4rpx;
  line-height: 88rpx;
  height: 88rpx;
  font-weight: 600;
  font-family: PingFang-SC-Bold;
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 24rpx;
}

.modal-dialog-footer{
font-family: PingFangSC-Medium;
font-size: 24rpx;
color: #A9BACF;
line-height: 34rpx;
margin-bottom: 30rpx;
text-align: center;
}