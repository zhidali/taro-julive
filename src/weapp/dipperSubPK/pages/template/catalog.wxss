.catalog-box {
  position: fixed;
  top: 0rpx;
  width: 100vw;
  height: 100vh;
  z-index: 9999;
  left: 0rpx;
}

.catalog-box-mark {
  width: 100%;
  height: 100%;
  opacity: 0.6;
  background: #000;
}

.catalog-box-content {
  width: 600rpx;
  height: 100vh;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  background: #fff;
  box-sizing: border-box;
  padding-left: 40rpx;
}

.catalog-box-content-title {
  font-weight: 500;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  line-height: 56rpx;
  margin-top: 80rpx;
  color: #001a4a;
}

.catalog-box-content-text {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  line-height: 45rpx;
  padding-bottom: 31rpx;
  color: #001a4a;
  margin-top: 31rpx;
}

.catalog-box-line {
  width: 100%;
  height: 1px;
  background-color: #ecf0f4;
}

.catalog-box-content cover-view:nth-child(2) {
  margin-top: 44rpx;
}

.catalog-active {
  color: #b77400;
}
