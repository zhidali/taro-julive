.box {
  background-color: #fff;
  padding: 20rpx 0rpx 4rpx 0rpx;
  position: fixed;
  bottom: 0;
  width: 100vw;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  padding-bottom: 20rpx;
}

.body {
  /* padding-left: 40rpx;
  padding-right: 40rpx; */
  width: 100vw;
  min-height: 200rpx;
  background-color: red;
}

cover-view {
  white-space: normal;
}

.box_clear {
  margin: 0rpx 40rpx;
}

.box_btn {
  height: 60rpx;
  margin-bottom: 10rpx;
  margin-left: 40rpx;
}

.btn_tool {
  font-family: PingFangSC-Medium;
  border-radius: 30rpx;
  width: 136rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  text-align: center;
  font-size: 28rpx;
  margin-right: 40rpx;
}

.btn_tool_bus {
  width: 176rpx;
}

.btn_true {
  background-color: #47b3e3;
  color: #fff;
}

.btn_false {
  color: #3e4a59;
  background: #f3f6f9;
}

.box_info_model {
  margin-right: 40rpx;
  margin-left: 40rpx;
}

.box_info {
  padding: 30rpx 0rpx;
  /* border-bottom: 2rpx solid #f3f6f9; */
  display: flex;
  justify-content: space-between;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #3e4a59;
}

.box_info_lf {
  display: flex;
}

.box_info_ri {
  margin-left: 30rpx;
  white-space: normal;
  text-align: right;
  min-width: 130rpx;
}

.ball-dot {
  min-height: 20rpx;
  max-height: 20rpx;
  min-width: 20rpx;
  max-width: 20rpx;
  border-radius: 10rpx;
  margin-right: 22rpx;
  margin-bottom: 2rpx;
  margin-top: 8rpx;
  position: relative;
}

.ball_right {
  position: absolute;
  left: 4rpx;
  top: 4rpx;
  width: 16rpx;
  height: 12rpx;
  z-index: 3;
}

.base_line {
  width: 100%;
  height: 2rpx;
  background-color: #f3f6f9;
}

.cover-select-traffic {
  position: absolute;
  top: 20rpx;
  right: 16rpx;
  height: 130px;
  width: 52px;
  background: rgba(255, 255, 255, 0.90);
  box-shadow: 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.30);
  border-radius: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 14rpx;
  color: #3e4254;
  text-align: center;
}

.cover-select-traffic cover-image {
  width: 26px;
  height: 26px;
  margin: 20rpx auto 8rpx auto;
}

.cover-select-traffic-transit cover-image{
  margin-top: 16rpx;
}

.cover-select-traffic {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  text-align: center;
  line-height: 30rpx;
}

.col {
  color: #47b3e3;
}

.select-destination {
  margin: 20rpx 40rpx 40rpx 40rpx;
  display: flex;
  overflow: hidden;
}

.select-destination cover-view {
  min-width: 140rpx;
  box-sizing: border-box;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-radius: 30rpx;
  font-size: 28rpx;
  padding: 10rpx 24rpx;
  color: #3e4a59;
  background: #f3f6f9;
}

.select-destination cover-view:first-of-type {
  margin-right: 24rpx;
}

.select-destination .target_destination {
   box-shadow: 0 4rpx 8rpx 0 rgba(71, 179, 227, 0.30);
background-color:  #30b0e9;
color: #fff;
}

.traffic_opa {
  opacity: 0.5;
}

.text_color {
  color: rgb(69, 162, 202);
}

.push_pull {
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
}

.cover-select-traffic .cover-select-traffic_line{
  height: 1px;
  width: 56rpx;
  margin: 16rpx auto 0rpx auto;
  background-color: #F3F6F9;

}

.box_info_model .padding_top_none{
  padding-top: 0rpx;
}