.com-selectBox {
  width: 496rpx;
  height: 88rpx;
  background: rgba(243, 246, 249, 1);
  border-radius: 4rpx;
  position: relative;
}
.com-sContent {
  font-size: 28rpx;
  position: relative;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 26rpx 0 24rpx;
}
.com-sTxt {
  color: #c4cbcc;
}
.com-sSelect {
  display: flex;
  align-items: center;
  height: 88rpx;
}
.com-sSelect .content {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(3, 26, 31, 1);
  line-height: 88rpx;
  padding-right: 10rpx;
}
.com-sSelect .img {
  width: 28rpx;
  height: 28rpx;
  transition: all 0.3s ease;
}

.com-sList {
  width: 496rpx;
  max-height: 344rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.08);
  border-radius: 4rpx;
  background-color: #fff;
  position: absolute;
  margin-top: 8rpx;
  z-index: 3;
  overflow-y: scroll !important;
  overflow-x: hidden !important;
}
/*控制整个滚动条*/
.com-sList::-webkit-scrollbar {
  /* background-color: #ddd; */
  /* width: 8rpx;
  border-radius: 8rpx; */
}

.com-sItem {
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
  border-radius: 4rpx;
}
