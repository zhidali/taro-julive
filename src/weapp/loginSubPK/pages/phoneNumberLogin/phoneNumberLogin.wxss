.container {
  width: 100%;
  height: 100%;
  background-color: white;
}

.phone-number-login-view {
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex: 1;
}

.phone-number-login-title {
  margin-top: 40rpx;
  margin-left: 40rpx;
  font-family: PingFangSC-Semibold;
  font-size: 44rpx;
  color: #3e4a59;
}

.input-view {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-right: 40rpx;
  flex: 1;
}

.input-phone-view {
  font-family: PingFang-SC-Medium;
  color: #3e4a59;
  font-size: 32rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.input {
  flex: 1;
}
.input-phone-clear {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 10rpx;
  right: 206rpx;
}
.input-holder {
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  color: #c0c0c0;
}

.verification-code {
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  color: #77808a;
  min-width: 240rpx;
  text-align: right;
}

.check-code-image {
  max-width: 180rpx;
  min-width: 180rpx;
  width: 180rpx;
  height: 65rpx;
  line-height: 65rpx;
}

.hover-view {
  background-color: #efefef;
}

.separate-line {
  margin-top: 20rpx;
  width: 100%;
  height: 2rpx;
  background-color: #f3f6f9;
}

.phone-number-login-button {
  margin-top: 64rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
  background-image: linear-gradient(-131deg, #47b3e3 0%, #5dd7ff 100%);
  border-radius: 8rpx;
}

.phone-number-login-tip-view {
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.phone-number-login-protocol-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.phone-number-login-tip {
  font-family: PingFang-SC-Medium;
  font-size: 24rpx;
  color: #a9bacf;
  text-align: center;
}

.phone-number-protocol-text {
  font-family: PingFang-SC-Medium;
  font-size: 24rpx;
  color: #47b3e3;
  text-align: center;
}
